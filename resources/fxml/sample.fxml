<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rs.tut4.Controller">
   <children>
      <TabPane maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Artikli">
              <GridPane>
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                  <children>
                     <TextArea fx:id="uzimaArtikle" prefHeight="200.0" prefWidth="200.0">
                        <GridPane.margin>
                           <Insets bottom="30.0" left="20.0" top="20.0" />
                        </GridPane.margin>
                     </TextArea>
                     <TextArea fx:id="ispisArtikala" editable="false" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
                        <GridPane.margin>
                           <Insets bottom="10.0" left="20.0" />
                        </GridPane.margin>
                     </TextArea>
                     <Button mnemonicParsing="false" onAction="#dodajArtikle" text="Dodaj artikle" GridPane.columnIndex="1">
                        <GridPane.margin>
                           <Insets left="20.0" />
                        </GridPane.margin>
                     </Button>
                  </children>
               </GridPane>
          </Tab>
          <Tab text="Račun">
              <GridPane>
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints minHeight="60.0" prefHeight="30.0" />
                     <RowConstraints minHeight="200.0" prefHeight="30.0" />
                  </rowConstraints>
                  <children>
                     <Label text="Artikal:" GridPane.rowIndex="1">
                        <GridPane.margin>
                           <Insets left="10.0" right="100.0" top="10.0" />
                        </GridPane.margin></Label>
                     <ChoiceBox fx:id="padajucaLista" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <GridPane.margin>
                           <Insets top="10.0" />
                        </GridPane.margin></ChoiceBox>
                     <Label text="Količina:" GridPane.rowIndex="2">
                        <GridPane.margin>
                           <Insets left="10.0" top="30.0" />
                        </GridPane.margin>
                     </Label>
                     <Spinner fx:id="spinnerKolicina" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="2" min="0" max="1000" amountToStepBy="1">
                        <GridPane.margin>
                           <Insets top="30.0" />
                        </GridPane.margin>
                     </Spinner>
                     <Button mnemonicParsing="false" onAction="#dugmeArtikliRacun" text="Dodaj" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <GridPane.margin>
                           <Insets />
                        </GridPane.margin>
                     </Button>
                     <Label text="Aktuelni račun: " GridPane.rowIndex="4">
                        <GridPane.margin>
                           <Insets left="10.0" />
                        </GridPane.margin>
                     </Label>
                     <TextArea fx:id="ispisAktuelnogRacuna" editable="false" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  </children></GridPane>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
